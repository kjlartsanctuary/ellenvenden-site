  <script>
    // Square links for each artwork-size-medium combination
    const squareLinks = {
      "1_11x14_paper": "YOUR_SQUARE_LINK_1_11x14_PAPER",
      "1_11x14_canvas": "YOUR_SQUARE_LINK_1_11x14_CANVAS",
      "1_16x20_paper": "YOUR_SQUARE_LINK_1_16x20_PAPER",
      "1_16x20_canvas": "YOUR_SQUARE_LINK_1_16x20_CANVAS",

      "2_11x14_paper": "YOUR_SQUARE_LINK_2_11x14_PAPER",
      "2_11x14_canvas": "YOUR_SQUARE_LINK_2_11x14_CANVAS",
      "2_16x20_paper": "YOUR_SQUARE_LINK_2_16x20_PAPER",
      "2_16x20_canvas": "YOUR_SQUARE_LINK_2_16x20_CANVAS",

      "3_11x14_paper": "YOUR_SQUARE_LINK_3_11x14_PAPER",
      "3_11x14_canvas": "YOUR_SQUARE_LINK_3_11x14_CANVAS",
      "3_16x20_paper": "YOUR_SQUARE_LINK_3_16x20_PAPER",
      "3_16x20_canvas": "YOUR_SQUARE_LINK_3_16x20_CANVAS"
    };

    function updateButton(artworkNumber){
      const size = document.getElementById("size"+artworkNumber).value;
      const medium = document.getElementById("medium"+artworkNumber).value;
      const key = artworkNumber + "_" + size + "_" + medium;
      const link = squareLinks[key];
      document.getElementById("btn"+artworkNumber).href = link;
    }

    [1,2,3].forEach(num => {
      document.getElementById("size"+num).addEventListener("change", () => updateButton(num));
      document.getElementById("medium"+num).addEventListener("change", () => updateButton(num));
      updateButton(num); // Initialize on load
    });
  </script>
